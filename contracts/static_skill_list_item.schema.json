{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://skillsight.dev/contracts/static_skill_list_item.schema.json",
  "title": "SkillListItem",
  "type": "object",
  "required": ["id", "skill_id", "owner", "repo", "name", "canonical_url"],
  "properties": {
    "id": { "type": "string" },
    "skill_id": { "type": "string" },
    "owner": { "type": "string" },
    "repo": { "type": "string" },
    "name": { "type": "string" },
    "canonical_url": { "type": "string", "format": "uri" },
    "total_installs": { "type": ["integer", "null"] },
    "weekly_installs": { "type": ["integer", "null"] },
    "rank_at_fetch": { "type": ["integer", "null"], "minimum": 1 },
    "description": { "type": ["string", "null"] },
    "platform_installs": { "type": ["object", "null"], "additionalProperties": true }
  },
  "additionalProperties": true
}
